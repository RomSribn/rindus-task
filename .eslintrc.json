{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:sonarjs/recommended"
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      },
      "babel-module": {
        "alias": {
        "*": ["./node_modules/*"],
        "@config/*": ["./src/config/*"],
        "@api/*": ["./src/api/*"],
        "@middlewares/*": ["./src/middlewares/*"],
        "@utils/*": ["./src/utils/*"],
        "@interfaces/*": ["./src/interfaces/*"]
        }
      }
    }
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "tsconfigRootDir": ".",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "pretty-imports",
    "@typescript-eslint",
    "sonarjs"
  ],
  "rules": {
    "no-empty-pattern": 0,
    "no-unused-vars": 0,
    "pretty-imports/sorted": "error"
  }
}
